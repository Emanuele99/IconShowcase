<!-- Formatting note: terminate all comments with a period, to avoid breaking
     the documentation output. To suppress comment lines from the documentation
     output, insert an eat-comment element after the comment lines.
-->

<resources>
    <!-- These are the standard attributes that make up a complete theme. -->
    <declare-styleable name="Theme">
        <!-- ============== -->
        <!-- Generic styles -->
        <!-- ============== -->
        <eat-comment/>

        <!-- Default color of cardview background. -->
        <attr name="colorCardBackground" format="color"/>
        <!--Additional color for home in case you want to make it different-->
        <attr name="homeBackground" format="color"/>
        <!-- Color to tint drawables. -->
        <attr name="drawablesTintColor" format="color"/>
        <!-- Color to tint fabs. -->
        <attr name="fabTintColor" format="color"/>
        <!-- Primary color -->
        <attr name="primaryColor" format="color"/>
        <!-- Primary dark color -->
        <attr name="primaryDarkColor" format="color"/>
        <!-- Accent color -->
        <attr name="accentColor" format="color"/>
        <!-- Custom toolbar theme. -->
        <attr name="toolbarTheme" format="reference"/>
        <!-- Toolbar Text Color. -->
        <attr name="toolbarTextColor" format="color"/>
        <!-- Tabs Indicator Color. -->
        <attr name="tabsIndicatorColor" format="color"/>
        <!-- Tabs Normal Text Color. -->
        <attr name="tabsNormalTextColor" format="color"/>
        <!-- Tabs Selected Text Color. -->
        <attr name="tabsSelectedTextColor" format="color"/>

    </declare-styleable>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/launcher_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="?attr/colorCardBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/cards_elevation">

    <LinearLayout
        android:id="@+id/itemBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <iconshowcase.lib.views.SquaredImageView
            android:id="@+id/launcherIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorCardBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher"
            tools:ignore="ContentDescription, UnusedAttribute"/>

        <TextView
            android:id="@+id/launcherName"
            style="@style/ListsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Launcher Name"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
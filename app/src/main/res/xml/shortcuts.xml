<shortcuts xmlns:tools="http://schemas.android.com/tools"
           xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- /*/*/*/*/*/  ONLY REPLACE "jahirfiquitiva.apps.iconshowcase.sampleip" with your app's package name  /*/*/*/*/*/ -->

    <shortcut
            android:icon="@drawable/ic_apply"
            android:enabled="true"
            android:shortcutId="static_apply_shortcut"
            android:shortcutShortLabel="@string/section_apply"
            android:shortcutLongLabel="@string/section_apply"
            tools:targetApi="n_mr1">
        <intent
                android:targetPackage="jahirfiquitiva.apps.iconshowcase.sampleip"
                android:action="android.intent.action.VIEW"
                android:targetClass="jahirfiquitiva.apps.iconshowcase.sampleip.HomeActivity"
                android:data="@string/apply_shortcut"/>
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>

    <shortcut
            android:icon="@drawable/ic_wallpapers"
            android:enabled="true"
            android:shortcutId="static_wallpapers_shortcut"
            android:shortcutShortLabel="@string/section_wallpapers"
            android:shortcutLongLabel="@string/section_wallpapers"
            tools:targetApi="n_mr1">
        <intent
                android:targetPackage="jahirfiquitiva.apps.iconshowcase.sampleip"
                android:action="android.intent.action.VIEW"
                android:targetClass="jahirfiquitiva.apps.iconshowcase.sampleip.HomeActivity"
                android:data="@string/wallpapers_shortcut"/>
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>

    <shortcut
            android:icon="@drawable/ic_request"
            android:enabled="true"
            android:shortcutId="static_request_shortcut"
            android:shortcutShortLabel="@string/section_icon_request"
            android:shortcutLongLabel="@string/section_icon_request"
            tools:targetApi="n_mr1">
        <intent
                android:targetPackage="jahirfiquitiva.apps.iconshowcase.sampleip"
                android:action="android.intent.action.VIEW"
                android:targetClass="jahirfiquitiva.apps.iconshowcase.sampleip.HomeActivity"
                android:data="@string/request_shortcut"/>
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>

</shortcuts>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.melnykov.fab.ObservableScrollView
        android:id="@+id/HomeContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.GridLayout
                android:id="@+id/iconsRow"
                style="@style/PreviewContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icons_preview_row"
                android:gravity="center"
                app:alignmentMode="alignBounds"
                app:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/lists_padding"
                    android:src="@drawable/ic_launcher"
                    android:visibility="invisible"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    tools:ignore="ContentDescription"/>

                <ImageView
                    android:id="@+id/iconTwo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/lists_padding"
                    android:src="@drawable/ic_launcher"
                    android:visibility="invisible"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    tools:ignore="ContentDescription"/>

                <ImageView
                    android:id="@+id/iconThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/lists_padding"
                    android:src="@drawable/ic_launcher"
                    android:visibility="invisible"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    tools:ignore="ContentDescription"/>

                <ImageView
                    android:id="@+id/iconFour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/lists_padding"
                    android:src="@drawable/ic_launcher"
                    android:visibility="invisible"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    tools:ignore="ContentDescription"/>

            </android.support.v7.widget.GridLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/infocard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iconsRow"
                android:layout_margin="@dimen/cards_margin"
                android:clickable="false"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/fab_size_normal"
                android:paddingTop="@dimen/cards_margin"
                app:cardBackgroundColor="?attr/colorCardBackground"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/cards_elevation">

                <RelativeLayout
                    style="@style/HomeCardContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/welcomeTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="@string/welcome_title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textStyle="italic"
                            />

                        <TextView
                            android:id="@+id/welcomeContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/cards_text_margin"
                            android:layout_marginTop="@dimen/cards_text_top_margin"
                            android:lineSpacingMultiplier="1.2"
                            android:text="@string/theme_description"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rate_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="?selectableItemBackgroundBorderless"
                            android:gravity="center"
                            android:padding="@dimen/margin_medium_sm"
                            android:text="@string/ratebtn"
                            android:textColor="@color/accent"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </com.melnykov.fab.ObservableScrollView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/apply_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/cards_padding"
        android:layout_marginEnd="@dimen/cards_padding"
        android:layout_marginRight="@dimen/cards_padding"
        android:src="@drawable/ic_apply_icons"/>

</RelativeLayout>
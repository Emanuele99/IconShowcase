<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/gridParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <jahirfiquitiva.apps.iconshowcase.views.FastScrollRecyclerView
        android:id="@+id/iconsGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="ifContentScrolls"
        android:paddingBottom="@dimen/grid_padding_vertical"
        android:paddingTop="@dimen/grid_padding_vertical"
        app:fastScrollThumbColor="@color/accent"/>

</RelativeLayout>
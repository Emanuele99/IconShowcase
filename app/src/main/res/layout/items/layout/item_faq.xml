<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/faq_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/fullwidth_card_margin"
    android:layout_marginRight="@dimen/fullwidth_card_margin"
    app:cardBackgroundColor="?attr/colorCardBackground"
    app:cardCornerRadius="@dimen/fullwidth_card_corner_radius"
    app:cardElevation="0dp">

    <LinearLayout
        style="@style/CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/faq_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/faq_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/lists_padding"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
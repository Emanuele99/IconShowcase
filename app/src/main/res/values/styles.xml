<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="md_title_color">@android:color/black</item>
        <item name="md_content_color">@android:color/black</item>
        <item name="md_positive_color">@color/accent</item>
        <item name="md_negative_color">@color/accent</item>
        <item name="md_neutral_color">@color/accent</item>
        <item name="colorCardBackground">@color/card_light_background</item>
        <item name="drawablesTintColor">@color/grey</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme.Base.Dark">
        <item name="md_title_color">@android:color/white</item>
        <item name="md_content_color">@android:color/white</item>
        <item name="md_positive_color">@color/accent</item>
        <item name="md_negative_color">@color/accent</item>
        <item name="md_neutral_color">@color/accent</item>
        <item name="colorCardBackground">@color/card_dark_background</item>
        <item name="drawablesTintColor">@android:color/white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="AppTheme.Base" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:windowBackground">@color/light_bg</item>
        <item name="android:popupMenuStyle">@style/CustomPopUpMenu</item>
    </style>

    <style name="AppTheme.Base.Dark" parent="MaterialDrawerTheme.TranslucentStatus">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:popupMenuStyle">@style/CustomPopUpMenu</item>
    </style>

    <style name="AppTheme.Base.LightLaunchScreen">
        <item name="android:windowBackground">@drawable/splash_screen_light</item>
        <item name="colorPrimaryDark">@color/splash_light_statusbar</item>
        <item name="colorAccent">@color/splash_light_statusbar</item>
    </style>

    <style name="AppTheme.Base.DarkLaunchScreen">
        <item name="android:windowBackground">@drawable/splash_screen_dark</item>
        <item name="colorPrimaryDark">@color/splash_dark_statusbar</item>
        <item name="colorAccent">@color/splash_dark_statusbar</item>
    </style>

    <style name="EmptyActivity" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="CardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/cards_spacing</item>
        <item name="android:paddingRight">@dimen/cards_spacing</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AboutContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_little_margin</item>
        <item name="android:paddingRight">@dimen/card_little_margin</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListsContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_little_margin</item>
        <item name="android:paddingRight">@dimen/card_little_margin</item>
        <item name="android:paddingTop">@dimen/card_little_margin</item>
        <item name="android:paddingBottom">@dimen/card_little_margin</item>
    </style>

    <style name="PreviewContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/icons_preview_row</item>
        <item name="android:paddingRight">@dimen/icons_preview_row</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
    </style>

    <style name="HomeCardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/welcome_card_content_padding</item>
        <item name="android:paddingRight">@dimen/welcome_card_content_padding</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="CustomPopUpMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:layout_margin">@dimen/cards_margin</item>
    </style>

</resources>
